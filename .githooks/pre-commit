#!/bin/sh
# Pre-commit hook for MAUI project

echo "ğŸ” Running pre-commit checks..."

# Check if dotnet is available
if ! command -v dotnet &> /dev/null; then
    echo "âŒ .NET is not installed or not in PATH"
    exit 1
fi

# Restore packages
echo "ğŸ“¦ Restoring NuGet packages..."
dotnet restore MauiApp1/MauiApp1.csproj

# Build the project (Android only for now due to iOS simulator issues)
echo "ğŸ”¨ Building project..."
if ! dotnet build MauiApp1/MauiApp1.csproj --configuration Debug --no-restore --framework net9.0-android; then
    echo "âŒ Build failed. Please fix build errors before committing."
    exit 1
fi

# Run tests (if any)
echo "ğŸ§ª Running tests..."
if ! dotnet test MauiApp1/MauiApp1.csproj --no-build --verbosity quiet; then
    echo "âŒ Tests failed. Please fix failing tests before committing."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0